@model List<Alkemy.Models.TableViewModels.TeacherTableViewModel>
@{
    ViewBag.Title = "Index";
}

<h2>Profesores</h2>
<div class="row">
    <div class="col-md-12">
        <input type="button" class="btn btn-primary" onclick="document.location.href='@Url.Content("~/Teachers/Add")'" value="Nuevo" />
    </div>
</div>
<br />
<div class="row">
    <div class="col-lg-12">
        <table class="table table-bordered">
            <tr>
                <th>ID</th>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>Dni</th>
                <th> </th>
            </tr>
            @foreach (var oElemento in Model)
            {
                <tr>
                    <td>@oElemento.Teacher_Id</td>
                    <td>@oElemento.Teacher_Name</td>
                    <td>@oElemento.Teacher_LastName</td>
                    <td>@oElemento.Teacher_Dni</td>
                    <td>
                        <input onclick="jsDelete(@oElemento.Teacher_Id);" type="button" value="Eliminar" class="btn btn-danger" />
                        <input onclick="document.location.href='@Url.Content("~/Teachers/Edit/"+oElemento.Teacher_Id)'" type="button" value="Editar" class="btn btn-default" />
                    </td>
                </tr>
            }
        </table>
    </div>
</div>

<script>
    function jsDelete(id) {
        if (confirm("Seguro desea eliminarlo?")) {
            url = "@Url.Content("~/Teachers/Delete")" + "/"+id;

            $.post(url, function (data) {
                if (data == "1") {
                    document.location.href = "@Url.Content("~/Teachers/")"
                } else {
                    alert("Ocurrio un error :(")
                }
            })
        }
    }
</script>
